{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Usuarios",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "usuario_id"
  },
  "properties": {
    "usuario_id": { "type": "string" },
    "correo": {
      "type": "string",
      "format": "email"
    },
    "contraseña": { "type": "string" },
    "nombre": { "type": "string" },
    "rol": {
      "type": "string",
      "enum": ["estudiante", "personal_administrativo", "autoridad"]
    }
  },
  "required": ["usuario_id", "correo", "nombre", "rol", "contraseña"],
  "additionalProperties": false
}
