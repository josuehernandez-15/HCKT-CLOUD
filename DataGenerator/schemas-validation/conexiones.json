{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Conexiones",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "conexion_id"
  },
  "properties": {
    "conexion_id": { "type": "string" },

    "usuario_id": { "type": "string" },

    "fecha_conexion": {
      "type": "string",
      "format": "date-time"
    },

    "expiracion_ttl": {
      "type": "number"
    }
  },

  "required": ["conexion_id", "usuario_id", "fecha_conexion"],

  "additionalProperties": false
}
