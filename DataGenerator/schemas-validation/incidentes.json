{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Incidentes",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "incidente_id"
  },
  "properties": {
    "incidente_id": { "type": "string" },
    "titulo": { "type": "string" },
    "descripcion": { "type": "string" },

    "piso": { "type": "integer" },

    "ubicacion": {
      "type": "object",
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" }
      },
      "required": ["x", "y"],
      "additionalProperties": false
    },

    "tipo": {
      "type": "string",
      "enum": ["limpieza", "seguridad", "mantenimiento", "otro"]
    },

    "nivel_urgencia": {
      "type": "string",
      "enum": ["bajo", "medio", "alto", "critico"]
    },

    "evidencias": {
      "type": "array",
      "items": { "type": "string", "format": "url" }
    },

    "estado": {
      "type": "string",
      "enum": ["reportado", "en_progreso", "resuelto"]
    },

    "usuario_id": { "type": "string" },

    "creado_en": { "type": "string", "format": "date-time" },
    "actualizado_en": { "type": "string", "format": "date-time" }
  },

  "required": [
    "incidente_id",
    "titulo",
    "tipo",
    "nivel_urgencia",
    "descripcion",
    "piso",
    "ubicacion",
    "estado",
    "usuario_id",
    "creado_en"
  ],

  "additionalProperties": false
}
