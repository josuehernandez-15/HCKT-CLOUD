{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Registros",
  "type": "object",
  "x-dynamodb": {
    "partition_key": "registro_id"
  },
  "properties": {
    "registro_id": { "type": "string" },

    "nivel": {
      "type": "string",
      "enum": ["INFO", "WARNING", "ERROR", "CRITICAL"]
    },

    "mensaje": { "type": "string" },

    "servicio": { "type": "string" },

    "contexto": {
      "type": "object",
      "additionalProperties": true
    },

    "marca_tiempo": { "type": "string", "format": "date-time" }
  },

  "required": [
    "registro_id",
    "nivel",
    "mensaje",
    "servicio",
    "marca_tiempo"
  ],

  "additionalProperties": false
}
