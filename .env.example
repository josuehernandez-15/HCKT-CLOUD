# ============================================================
# AWS CONFIGURATION (GLOBAL)
# ============================================================
# Las credenciales de AWS deben estar configuradas en ~/.aws/credentials con el formato:
# [default]
# aws_access_key_id=YOUR_ACCESS_KEY_ID
# aws_secret_access_key=YOUR_SECRET_ACCESS_KEY
# aws_session_token=YOUR_SESSION_TOKEN (opcional)
# region=us-east-1 (opcional, por defecto: us-east-1)

# Tu AWS Account ID (12 dígitos) - Obtener con: aws sts get-caller-identity --query Account --output text
AWS_ACCOUNT_ID=123456789012

# Nombre de tu organización en Serverless Framework
ORG_NAME=tu-organizacion

# ============================================================
# DYNAMODB TABLE NAMES (GLOBAL)
# ============================================================
TABLE_USUARIOS=AlertaUTEC-Usuarios
TABLE_INCIDENTES=AlertaUTEC-Incidentes
TABLE_EMPLEADOS=AlertaUTEC-Empleados
TABLE_LOGS=AlertaUTEC-Logs
TABLE_CONEXIONES=AlertaUTEC-Conexiones

# ============================================================
# USUARIOS - JWT CONFIGURATION
# ============================================================
JWT_SECRET=tu_secret_key_super_seguro_cambiar_en_produccion
JWT_EXPIRATION_HOURS=24

# ============================================================
# WEBSOCKET API (NOTIFICACIONES)
# ============================================================
# Estas variables se generarán automáticamente después del despliegue
# WEBSOCKET_ENDPOINT=wss://tu-endpoint.execute-api.us-east-1.amazonaws.com/dev

# ============================================================
# INCIDENTES - S3 BUCKET
# ============================================================
INCIDENTES_BUCKET=alerta-utec-incidentes-evidencias

# ============================================================
# USUARIO CON ROL AUTORIDAD (GENERADOR DE DATOS)
# ============================================================
AUTHORITY_USUARIO_NOMBRE=Autoridad UTEC
AUTHORITY_USUARIO_CORREO=autoridad@utec.edu.pe
AUTHORITY_USUARIO_CONTRASENA=autoridad123

# ============================================================
# SENDGRID EMAIL CONFIGURATION
# ============================================================
EMAIL_API_KEY =
EMAIL_FROM = elmer.villegas@utec.edu.pe 

# ============================================================
# ANALITICA - INGESTA EN AIRFLOW (ECS)
# ============================================================
ANALITICA_S3_BUCKET=alerta-utec-analitica
ANALITICA_GLUE_DATABASE=alerta_utec_analitica
ANALITICA_GLUE_CRAWLER=alerta-utec-analitica-crawler
ANALITICA_TABLES=usuarios=AlertaUTEC-Usuarios,incidentes=AlertaUTEC-Incidentes,empleados=AlertaUTEC-Empleados,logs=AlertaUTEC-Logs
ANALITICA_VPC_ID=vpc-xxxxxxxx
ANALITICA_SUBNETS=subnet-aaaaaaaa,subnet-bbbbbbbb
